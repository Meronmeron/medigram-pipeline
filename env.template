# Ethiopian Medical Business Data Platform Environment Variables
# Copy this file to .env and fill in your actual values

# Environment
ENVIRONMENT=development

# Database Configuration
POSTGRES_DB=ethiopian_medical_db
POSTGRES_USER=medical_user
POSTGRES_PASSWORD=secure_password_123
DATABASE_URL=postgresql://medical_user:secure_password_123@localhost:5432/ethiopian_medical_db

# Redis Configuration
REDIS_URL=redis://localhost:6379

# Telegram API Configuration
TELEGRAM_API_ID=your_telegram_api_id_here
TELEGRAM_API_HASH=your_telegram_api_hash_here
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# Telegram Channel Configuration
TELEGRAM_CHANNELS=channel1,channel2,channel3
TELEGRAM_SCRAPING_LIMIT=1000
TELEGRAM_SCRAPING_INTERVAL=3600

# YOLOv8 Model Configuration
YOLO_MODEL_PATH=/app/models/yolov8n.pt
YOLO_CONFIDENCE_THRESHOLD=0.5
YOLO_DEVICE=cpu

# FastAPI Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true
API_WORKERS=1

# Dagster Configuration
DAGSTER_HOME=/app/dagster_home
DAGSTER_HOST=0.0.0.0
DAGSTER_PORT=3000

# dbt Configuration
DBT_PROJECT_DIR=/app/dbt
DBT_PROFILES_DIR=/app/dbt/profiles

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=/app/logs/app.log

# Data Storage
DATA_DIR=/app/data
MODELS_DIR=/app/models
LOGS_DIR=/app/logs

# Security
SECRET_KEY=your_secret_key_here_change_this_in_production
JWT_SECRET_KEY=your_jwt_secret_key_here_change_this_in_production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# External APIs (if needed)
OPENAI_API_KEY=your_openai_api_key_here
GOOGLE_CLOUD_CREDENTIALS=your_google_cloud_credentials_here

# Monitoring and Analytics
SENTRY_DSN=your_sentry_dsn_here
PROMETHEUS_ENABLED=true

# Development Settings
DEBUG=true
CORS_ORIGINS=http://localhost:3000,http://localhost:8080
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0 